    @{
        var labelFont = new Syncfusion.EJ2.CircularGauge.CircularGaugeFont
        {
            FontFamily = "Roboto",
            Size = "0px",
            Color = "white",
            FontStyle = "Regular"
        };
    }
    <div class="col-lg-9 col-md-9 control-section" id="column1" style="margin-left: -5%" align="center">
        <ejs-circulargauge id="gauge1" load="gaugeload1" width="400px" height="400px">
            <e-circulargauge-axes>
                <e-circulargauge-axis startAngle="0" endAngle="360" minimum="0" maximum="100">
                    <e-axis-linestyle width="0"></e-axis-linestyle>
                    <e-axis-labelstyle useRangeColor="true" position="Inside" font="labelFont"></e-axis-labelstyle>
                </e-circulargauge-axis>
            </e-circulargauge-axes>
        </ejs-circulargauge>
    </div>
    <div class="col-lg-3 col-md-3" style="margin-left: -9%">
        <div class="panel" id="panel1" align="center">
            <div class="subgauge" style="float: left;margin-top: 3%">
                <ejs-circulargauge id="gauge2" load="gaugeload2" width="65px" height="65px">
                    <e-circulargauge-axes>
                        <e-circulargauge-axis startAngle="0" endAngle="360" minimum="0" maximum="100">
                            <e-axis-linestyle width="0"></e-axis-linestyle>
                            <e-axis-labelstyle useRangeColor="true" position="Inside" font="labelFont"></e-axis-labelstyle>
                        </e-circulargauge-axis>
                    </e-circulargauge-axes>
                </ejs-circulargauge>
            </div>
            <div class="content">
                <span class="firstcontent" style="font-size: 17px;">MOVE</span>
                <span class="firstcontent" style="font-size: 17px;color: #E7092E">65%</span><br />
                <span class="secondcontent" style="color: #E7092E; font-size: 19px">338/520 CAL</span>
            </div>
        </div>
        <div class="panel" id="panel2" align="center">
            <div class="subgauge" style="float: left;margin-top: 3%">
                <ejs-circulargauge id="gauge3" load="gaugeload3" width="65px" height="65px">
                    <e-circulargauge-axes>
                        <e-circulargauge-axis startAngle="0" endAngle="360" minimum="0" maximum="100">
                            <e-axis-linestyle width="0"></e-axis-linestyle>
                            <e-axis-labelstyle useRangeColor="true" position="Inside" font="labelFont"></e-axis-labelstyle>
                        </e-circulargauge-axis>
                    </e-circulargauge-axes>
                </ejs-circulargauge>
            </div>
            <div class="content">
                <span class="firstcontent" style="font-size: 17px;">EXERCISE</span>
                <span class="firstcontent" style="font-size: 17px;color: #52E908">43%</span><br />
                <span class="secondcontent" style="color: #52E908; font-size: 19px">13/30 MIN</span>
            </div>
        </div>
        <div class="panel" id="panel3" align="center">
            <div class="subgauge" style="float: left;margin-top: 3%">
                <ejs-circulargauge id="gauge4" load="gaugeload4" width="65px" height="65px">
                    <e-circulargauge-axes>
                        <e-circulargauge-axis startAngle="0" endAngle="360" minimum="0" maximum="100">
                            <e-axis-linestyle width="0"></e-axis-linestyle>
                            <e-axis-labelstyle useRangeColor="true" position="Inside" font="labelFont"></e-axis-labelstyle>
                        </e-circulargauge-axis>
                    </e-circulargauge-axes>
                </ejs-circulargauge>
            </div>
            <div class="content">
                <span class="firstcontent" style="font-size: 17px;">STAND</span>
                <span class="firstcontent" style="font-size: 17px;color: #04CBF3">58%</span><br />
                <span class="secondcontent" style="color: #04CBF3; font-size: 19px">7/12 HR</span>
            </div>
        </div>
    </div>
}
<script>
    window.gaugeload1 = function (args) {
        @* custom code start *@
        var theme = themeName ? themeName : 'Material';
        args.gauge.theme = (theme.charAt(0).toUpperCase() +
            theme.slice(1)).replace(/-dark/i, 'Dark').replace(/contrast/i, 'Contrast');
        @* custom code end *@
        var axis = args.gauge.axes[0];
        axis.majorTicks.height = 0;
        axis.minorTicks.height = 0;
        axis.ranges = [
            {
                start: 0, end: 100, radius: "90%",
                startWidth: 40, endWidth: 40, color: "#fa114f", opacity: 0.2
            },
            {
                start: 0, end: 100, radius: "68%",
                startWidth: 40, endWidth: 40, color: "#99ff01", opacity: 0.2
            },
            {
                start: 0, end: 100, radius: "46%",
                startWidth: 40, endWidth: 40, color: "#00d8fe", opacity: 0.2
            }
        ];
        axis.pointers = [
            {
                roundedCornerRadius: 25, value: 65, type: 'RangeBar',
                radius: '90%', color: '#fa114f', animation: { enable: true },
                pointerWidth: 40
            },
            {
                roundedCornerRadius: 25, value: 43, type: 'RangeBar',
                radius: '68%', color: '#99ff01', animation: { enable: true },
                pointerWidth: 40
            },
            {
                roundedCornerRadius: 25, value: 58, type: 'RangeBar',
                radius: '46%', color: '#00d8fe', animation: { enable: true },
                pointerWidth: 40
            }
        ];
        axis.annotations = [
            {
                angle: 8, radius: '80%', zIndex: '1',
                content: '<div class="annotation1"><img style="width:22px;height:22px;" src="../styles/images/circulargauge/image1.svg" /></div>'
            },
            {
                angle: 11, radius: '58%', zIndex: '1',
                content: '<div class="annotation2"><img style="width:20px;height:20px;" src="../styles/images/circulargauge/image2.svg" /></div>'
            },
            {
                angle: 16, radius: '36%', zIndex: '1',
                content: '<div class="annotation3"><img style="width:22px;height:22px;" src="../styles/images/circulargauge/image3.svg" /></div>'
            }
        ]
    };
    window.gaugeload2 = function (args) {
        @* custom code start *@
        var theme = location.hash.split('/')[1];
        theme = theme ? theme : 'Material';
        args.gauge.theme = (theme.charAt(0).toUpperCase() +
            theme.slice(1)).replace(/-dark/i, 'Dark').replace(/contrast/i, 'Contrast');
        @* custom code end *@        
        var axis = args.gauge.axes[0];
        axis.majorTicks.height = 0;
        axis.minorTicks.height = 0;
        axis.ranges = [
            {
                start: 0, end: 100,
                radius: '100%',
                startWidth: 8, endWidth: 8,
                color: '#fa114f', opacity: 0.2
            }
        ];
        axis.pointers = [
            {
                roundedCornerRadius: 5,
                value: 65,
                type: 'RangeBar',
                radius: '100%',
                color: '#fa114f',
                animation: { enable: true },
                pointerWidth: 8
            }
        ];
        axis.annotations = [
            {
                angle: 0, radius: '0%', zIndex: '1',
                content: '<div class="annotation4"><img style="width:17px;height:17px;" src="../styles/images/circulargauge/image1.svg" /></div>'
            }
        ];
        if (theme === 'highcontrast') {
            args.gauge.axes[0].annotations[0].content = '<div class="annotation7"><img style="width:17px;height:17px;" src="../styles/images/circulargauge/image4.svg" /></div>';
        }
    };
    window.gaugeload3 = function (args) {
        @* custom code start *@
        var theme = location.hash.split('/')[1];
        theme = theme ? theme : 'Material';
        args.gauge.theme = (theme.charAt(0).toUpperCase() +
            theme.slice(1)).replace(/-dark/i, 'Dark').replace(/contrast/i, 'Contrast');
        @* custom code end *@
        
        var axis = args.gauge.axes[0];
        axis.labelStyle.font.size = "0px";
        axis.majorTicks.height = 0;
        axis.minorTicks.height = 0;
        axis.ranges = [
            {
                start: 0, end: 100,
                radius: '100%',
                startWidth: 8, endWidth: 8,
                color: '#99ff01', opacity: 0.2
            }
        ];
        axis.pointers = [
            {
                roundedCornerRadius: 5,
                value: 43,
                type: 'RangeBar',
                radius: '100%',
                color: '#99ff01',
                animation: { enable: true },
                pointerWidth: 8
            }
        ];
        axis.annotations = [
            {
                angle: 0, radius: '0%', zIndex: '1',
                content: '<div class="annotation5"><img style="width:15px;height:15px;" src="../styles/images/circulargauge/image2.svg" /></div>'
            }
        ];
        if (theme === 'highcontrast') {
            args.gauge.axes[0].annotations[0].content = '<div class="annotation8"><img style="width:15px;height:15px;" src="../styles/images/circulargauge/image5.svg" /></div>';
        }
    };
    window.gaugeload4 = function (args) {
        @* custom code start *@
        var theme = location.hash.split('/')[1];
        theme = theme ? theme : 'Material';
        args.gauge.theme = (theme.charAt(0).toUpperCase() +
            theme.slice(1)).replace(/-dark/i, 'Dark').replace(/contrast/i, 'Contrast');
        @* custom code end *@
        
        var axis = args.gauge.axes[0];
        axis.labelStyle.font.size = "0px";
        axis.majorTicks.height = 0;
        axis.minorTicks.height = 0;
        axis.ranges = [
            {
                start: 0, end: 100,
                radius: '100%',
                startWidth: 8, endWidth: 8,
                color: '#00d8fe', opacity: 0.2
            }
        ];
        axis.pointers = [
            {
                roundedCornerRadius: 5,
                value: 58,
                type: 'RangeBar',
                radius: '100%',
                color: '#00d8fe',
                animation: { enable: true },
                pointerWidth: 8
            }
        ];
        axis.annotations = [
            {
                angle: 0, radius: '0%', zIndex: '1',
                content: '<div class="annotation6"><img style="width:17px;height:17px;" src="../styles/images/circulargauge/image3.svg" /></div>'
            }
        ];
        if (theme === 'highcontrast') {
            args.gauge.axes[0].annotations[0].content = '<div class="annotation9"><img style="width:17px;height:17px;" src="../styles/images/circulargauge/image6.svg" /></div>';
        }
    }
</script>
