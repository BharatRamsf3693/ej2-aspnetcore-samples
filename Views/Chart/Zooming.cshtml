    <script>
        var selectedTheme = location.hash.split('/')[1];
        selectedTheme = selectedTheme ? selectedTheme : 'Material';
        var theme = (selectedTheme.charAt(0).toUpperCase() + selectedTheme.slice(1)).replace(/-dark/i, 'Dark').replace(/contrast/i, 'Contrast');
        var zoomthemes = ['bootstrap5', 'bootstrap5dark', 'tailwind', 'tailwinddark', 'material', 'materialdark', 'bootstrap4', 'bootstrap', 'bootstrapdark', 'fabric', 'fabricdark', 'highcontrast', 'fluent', 'fluentdark', 'material3', 'material3dark', 'fluent2', 'fluent2dark'];
        var borderColor = ['#6355C7', '#8F80F4', '#5A61F6', '#8B5CF6', '#00bdae', '#9ECB08', '#a16ee5', '#a16ee5', '#a16ee5', '#4472c4', '#4472c4', '#79ECE4', '#1AC9E6', '#1AC9E6', '#6355C7', '#4EAAFF', '#6200EE', '#9BB449'];
        var fill = 'url(#' + selectedTheme + '-gradient-chart)';
        function load(args) {
            var indexedTheme = location.hash.split('/')[1];
            indexedTheme = indexedTheme ? indexedTheme : 'Material';
            args.chart.theme = (indexedTheme.charAt(0).toUpperCase() + indexedTheme.slice(1).replace(/-dark/i, 'Dark').replace(/contrast/i, 'Contrast'));
            args.chart.series[0].border = { width: 2, color: borderColor[zoomthemes.indexOf(args.chart.theme.toLowerCase())] }
            args.chart.series[0].fill = 'url(#' + selectedTheme + '-gradient-chart)';
            args.chart.width = ej.base.Browser.isDevice ? "100%" : "75%";

            //series dataSource
            var series1 = [];
            var point1;
            var value = 80;
            var i;
            for (i = 1; i < 500; i++) {
                if (Math.random() > 0.5) {
                    value += Math.random();
                }
                else {
                    value -= Math.random();
                }
                point1 = { Period: new Date(1960, i + 1, i), Profit: Math.round(value) };
                series1.push(point1);
            }
            args.chart.series[0].dataSource = series1;
        }
    </script>
