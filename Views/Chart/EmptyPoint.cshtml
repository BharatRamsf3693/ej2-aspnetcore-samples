@using Syncfusion.EJ2
@section ControlsSection{
    @{
        var Column = "Column";
        var Gap = "Gap";
    }
    <div class="col-lg-8 control-section">
        <div id="container" align='center'>
            <ejs-chart id="emtpyContainer" load="window.onChartLoad" title="Annual Product-Wise Profit Analysis">
                <e-chart-tooltipsettings enable="true">
                </e-chart-tooltipsettings>
                <e-chart-primaryxaxis title="Product" valueType="Category" interval=1></e-chart-primaryxaxis>
                <e-chart-primaryyaxis title="Profit" minimum=0
            maximum=100 interval=20 labelFormat="{value}%"></e-chart-primaryyaxis>
                <e-chart-chartarea>
                    <e-chartarea-border width="0"></e-chartarea-border>
                </e-chart-chartarea>
                <e-chart-legendsettings visible="false">
                </e-chart-legendsettings>
                <e-series-collection>
                    <e-series xName="x" yName="y" name="Profit" width=2 type="@Syncfusion.EJ2.Charts.ChartSeriesType.Column">
                        <e-series-marker visible="true" height="10" width="10"></e-series-marker>
                        <e-series-emptypointsettings fill="#e6e6e6"></e-series-emptypointsettings>
                    </e-series>
                </e-series-collection>
            </ejs-chart>
        </div>
    </div>
    <div class="col-lg-4 property-section">
        <table id="property" title="Properties" style="width: 100%;">
            <tr style="height: 50px">
                <td style="width: 50%">
                    <div>
                        Series Type:
                    </div>
                </td>
                <td style="width: 50%;">
                    <ejs-dropdownlist id="seriestype" dataSource="@ViewBag.data" value="Column" change="seriesChange" popupHeight="220px"></ejs-dropdownlist>
                </td>
            </tr>
            <tr style="height: 50px">
                <td style="width: 50%">
                    <div>
                        Empty Point Mode:
                    </div>
                </td>
                <td style="width: 50%;">
                    <ejs-dropdownlist id="emptypointmode" dataSource="@ViewBag.data1" value="Gap" change="modeChange" index="2" popupHeight="220px"></ejs-dropdownlist>
                </td>
            </tr>
        </table>
    </div>
    <script>
        window.onChartLoad = function (args) {
            @*custom code start*@
            var selectedTheme = location.hash.split('/')[1];
            selectedTheme = selectedTheme ? selectedTheme : 'Material';
            args.chart.theme = (selectedTheme.charAt(0).toUpperCase() + selectedTheme.slice(1).replace(/-dark/i, 'Dark').replace(/contrast/i, 'Contrast'));
            @*custom code end*@
            args.chart.dataSource = [
                { x : "Rice",  y : 80 },
                { x : "Wheat", y : null },
                { x : "Oil",   y : 70 },
                { x : "Corn",  y : 60 },
                { x : "Gram",  y : null },
                { x : "Milk",  y : 70 },
                { x : "Peas",  y : 80 },
                { x : "Fruit", y : 60 },
                { x : "Butter",y : null }
            ];
        }
        function seriesChange() {
            var chart = emtpyContainer.ej2_instances[0];
            chart.series[0].type = seriestype.ej2_instances[0].text;
            chart.refresh();
        }
        function modeChange() {
            var chart = emtpyContainer.ej2_instances[0];
            chart.series[0].emptyPointSettings.mode = emptypointmode.ej2_instances[0].text;
            chart.refresh();
        }
    </script>
}
@*custom code start*@
@section Scripts {
}

<style>
    #control-container {
        padding: 0px !important;
    }
</style>
@section Meta{
                    <meta name="description" content="This example demonstrates the Empty Points in ASP.NET Core Chart control. Explore here for more details."/>
                }
@*custom code end*@
