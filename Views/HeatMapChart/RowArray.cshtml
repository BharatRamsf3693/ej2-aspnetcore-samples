                    <meta name="description" content="This example demonstrates the Row in ASP.NET Core HeatMap control. Explore here for more details."/>
                }
@section Title{
                    <title>ASP.NET Core HeatMap Row Example - Syncfusion Demos </title> 
                }
@section Header{
                    <h1 class='sb-sample-text'>Example of Row in ASP.NET Core HeatMap Control</h1>
                }